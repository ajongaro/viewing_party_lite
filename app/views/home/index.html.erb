<div id="buttons-row">
<% if current_user %>
  <div id="logout-button">
    <%= button_to "Log Out", logout_path, method: :get %>
  </div> 
<% else %>
  <div id="new-user-button">
    <%= button_to "Create New User", register_path, method: :get %>
  </div> 
  <div id="login-button">
    <%= button_to "Login", login_path, method: :get %>
  </div> 
<% end %>
</div> 
<%= image_tag "hero.jpg", class: "hero" %>
<p>
<% if current_user %>
  <div id="user-list-home">
    <h3>Current Users</h3>
    <% @users.each do |user| %>
      <div id="user-<%="#{user.id}"%>">
        <%= user.email %><br>
      </div>
    <% end %>
  </div>
<% end %>