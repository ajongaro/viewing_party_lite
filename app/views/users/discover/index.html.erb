<h1> <%= @user.name %>'s Discover Movies Page</h1>

<div id="top-rated-movies">
  <%= button_to "Top Rated Movies", user_movies_path(@user), method: :get %>
</div>

<div id="movie-search">
  <%= form_with url: user_movies_path(@user), method: :get do |f| %>
    <%= f.label :title, "Movie Title" %>
    <%= f.text_field :title %>
    <%= f.submit "Search" %>
  <% end %>
</div>
