<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
   <div id="navigation">
    <%= link_to "Home", root_path %> 
   </div>

   <div id="error-messages">
    <% flash.each do |_type, message| %>
      <%= message %><br>
    <% end %>

   </div>
    <%= yield %>
  </body>
</html>
