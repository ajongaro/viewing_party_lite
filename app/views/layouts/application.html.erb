<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="navigation">
      <b><%= link_to "Home", root_path %></b>
    </div>
    <center>
    <% unless current_page?(root_path) %>
      <h1>Viewing Party</h1>
    <% end %>
      <div id="error-messages">
        <% flash.each do |_type, message| %>
          <%= message %><br>
        <% end %>
      </div>
      <%= yield %>
      </center>
  </body>
</html>
